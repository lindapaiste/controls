{
  "name": "@lindapaiste/react-controls",
  "version": "1.0.6",
  "description": "react hooks for handling mouse and keyboard events",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "demo": "react-scripts start"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "@lindapaiste/geometry": "^1.0.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lindapaiste/react-controls.git"
  },
  "homepage": "https://github.com/lindapaiste/react-controls",
  "bugs": {
    "url": "https://github.com/lindapaiste/react-controls/issues"
  },
  "devDependencies": {
    "@lindapaiste/geometry": "^1.0.9",
    "@types/jest": "^26.0.10",
    "@types/react": "^16.9.19",
    "jest": "^24.9.0",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7"
  },
  "files": [
    "lib/**/*"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
